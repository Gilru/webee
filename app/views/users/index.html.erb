<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">


        <h1>All Users</h1>
        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>User ID</th>
            <th>name</th>
            <th>company-name</th>
            <th>email</th>
            <th>date last sign in</th>
            <th>number of signin</th>
            <th colspan="2"></th>


          </tr>
          </thead>


          <tbody>
          <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.company %></td>
                <td><%= user.email %></td>
                <td><%= user.last_sign_in_at %></td>
                <td><%= user.sign_in_count %></td>
                <% provide(:user_name, "#{user.name if user == current_user}") %>

                <td><%= link_to "Profile", profile_path %></td>
                <td><%= link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" } %></td>

              </tr>
          <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>
