


<% if user_signed_in? && current_user.manager? %>

 <!--form search beginning-->
    <%= form_tag search_projects_path, method: :get do %>
        <p>
          <%= text_field_tag :search, params[:search], class: "form-control" %>
          <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
        </p>
    <% end %>
<% end %>

<!--form search-->


  <!-- Page Content -->
  <div id="page-content-wrapper">
    <div class="container-fluid">

          <a href="#menu-toggle" class="btn btn-success" id="menu-toggle">Toggle Menu</a>

        <!--===============================================add of project=======================================-->

        <h1>Listing projects</h1>

        <table class="table table-striped table-hover">
          <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Progress</th>
            <th>Link</th>
            <th>User</th>
            <th>Id project</th>
            <th>Write reviews</th>

            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <!--========================security============================-->

          <% @projects.each do |project| %>
              <% if user_signed_in? %>
                  <% if (project.user == current_user) || (current_user.manager?) %>

                      <!--========================security============================-->

                      <tr>
                        <td><%= project.title %></td>
                        <td><%= project.description %></td>
                        <td><%= project.progress %></td>
                        <td><%= project.link %></td>
                        <td><%= project.user.name %></td>
                        <td><%= project.id %></td>
                        <td><%= link_to "Write new review", new_project_review_path(project) %></td>
                        <td><%= link_to 'Show', project %></td>
                        <% if user_signed_in? && current_user.manager? %>
                            <td><%= link_to 'Edit', edit_project_path(project) %></td>
                            <td><%= link_to 'Destroy', project, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                        <% end %>


                      </tr>
                  <% end %>
              <% end %>

          <% end %>
          </tbody>
        </table>

        <br>
    <% if user_signed_in? && current_user.manager? %>
        <%= link_to 'New Project', new_project_path %>
    <% end %>

        <!--===============================================end of project=======================================-->
      </div>
    </div>
  </div>
  <!-- /#page-content-wrapper -->















