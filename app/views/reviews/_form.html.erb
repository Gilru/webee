<%= form_for([@project,@review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="red">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="media media-post">
      <a class="pull-left" href="#">
        <div class="avatar">
          <img class="media-object" alt="64x64" src="<%= current_user.profileimg.url %>">
        </div>
      </a>

  <div class="media-body">
    <%= f.label :comment, "message" %><br>
    <%= f.text_area :comment, class: "form-control", placeholder: "please write your message here" %>
  </div>
  <div class="media-footer">
    <%= f.submit "Send Message", class:"btn btn-info btn-lg pull-right" %>
  </div>
    </div>
<% end %>



