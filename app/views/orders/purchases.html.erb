<% if @orders.blank? %>
    <div id="page-content-wrapper">
      <div class="container-fluid">
        <a href="#menu-toggle" class="btn btn-success btn-rounded" id="menu-toggle">Toggle Menu</a>
        <div class="row">

          <div class="center">
          <i class="ti-shopping-cart-full purchase-ic-size center"></i>
          </div>


          <h1 class="center thin color-title-growth">You didn't purchase anything online yet</h1>

          <p class="light growth-p center"> Visit our preview store to find get inspired of the
            next website that you want us to build for you</p>
          <div class="center margin-top-no-purchase">
          <%= link_to "Click here to visit our Preview Store", websites_path,
                      class: "btn btn-color btn-outline btn-rounded center" %>
            </div>


      </div>
    </div>
    </div>

<% else %>


    <div id="page-content-wrapper">
      <div class="container-fluid">

        <a href="#menu-toggle" class="btn btn-success" id="menu-toggle">Toggle Menu</a>


        <h1 class="thin center">Your Purchase History</h1>

        <table class="table table-striped table-hover table-bordered">
          <thead>
          <tr>
            <th>Image</th>
            <th>Item</th>
            <th>Price</th>
            <th>Seller</th>
            <th>Date Purchased</th>

          </tr>
          </thead>

          <tbody>
          <% @orders.each do |order| %>
              <tr>
                <td><%= image_tag order.website.webimg.url(:medium), class: "image-profile" %></td>
                <td><%= order.website.name %></td>
                <td><%= number_to_currency(order.website.price) %></td>
                <td><%= order.seller.name %></td>
                <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>


              </tr>
          <% end %>
          </tbody>
        </table>


      </div>
    </div>

<% end %>