<!--form search beginning-->
<%= form_tag search_website_orders_path(@orders), method: :get do %>
    <p>
      <%= text_field_tag :search, params[:search],class: "form-control" %>
      <%= submit_tag "Search", name: nil,class: "btn btn-default" %>
    </p>
<% end %>

<!--form search-->


<div id="page-content-wrapper">
  <div class="container-fluid">


    <h1 class="thin center">Your Sales History</h1>

    <table class="table table-striped table-hover table-bordered">
      <thead>
      <tr>
        <th>Image</th>
        <th>Item</th>
        <th>Price</th>
        <th>Customer</th>
        <th>Date sold</th>

      </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= image_tag order.website.webimg.url(:medium), class: "image-profile" %></td>
            <td><%= order.website.name %></td>
            <td><%= number_to_currency(order.website.price) %></td>
            <td><%= order.buyer.name %></td>
            <td class="center"><%= order.created_at.strftime("%B %-d, %Y") %></td>


          </tr>
      <% end %>
      </tbody>
    </table>

    <br>
    <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'New Website', new_website_path %>
    <% end %>

  </div>
</div>