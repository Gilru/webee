<% if @websites.blank? %>

    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6 padding-top-blog center">
        <i class="ti-help-alt search-icon-size-and-color"></i>

        <h1 class="font-size-title thin color-degr">No result found</h1>
      </div>
      <div class="col-md-3"></div>
    </div>

<% end %>


<% provide(:visibility_search_blog,'hidden') %>
<div class="row">
  <% @websites.each do |website| %>
      <div class="col-md-3 center">
        <div class="thumbnail">
          <%= image_tag website.webimg.url(:medium) %>
          <!--link_to image_tag(listing.image.url), listing-->
          <div class="caption">
            <h3><%= website.name %></h3>
            <p><%=number_to_currency(website.price) %></p>
            <p><%= "Sold by #{website.user.name}" %></p>
            <%= link_to 'Show', website, class: "btn btn-link" %>

          </div>
        </div>
      </div>
  <% end %>
</div>
<br/>
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>

<br>