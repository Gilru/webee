

<% provide(:icon_color, 'green-ic') %>





<div class="row">
  <% @websites.each do |website| %>
      <div class="col-md-3 center">
        <div class="thumbnail">
          <%= image_tag website.webimg.url(:medium) %>
          <div class="caption">
            <h3><%= website.name %></h3>
            <p><%=number_to_currency(website.price) %></p>
            <%= link_to 'Show', website, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_website_path(website), class: "btn btn-link" %>
            <%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>
      </div>
  <% end %>
</div>

<br>







