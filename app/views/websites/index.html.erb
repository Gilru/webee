

<% provide(:icon_color, 'green-ic') %>





<div class="row">
  <% @websites.each do |website| %>
      <div class="col-md-3 center">
        <div class="thumbnail">
          <%= image_tag website.webimg.url(:medium) %>
          <!--link_to image_tag(listing.image.url), listing-->
          <div class="caption">
            <h3><%= website.name %></h3>
            <p><%=number_to_currency(website.price) %></p>
            <p><%= "Sold by #{website.user.name}" %></p>
            <%= link_to 'Show', website, class: "btn btn-link" %>

          </div>
        </div>
      </div>
  <% end %>
</div>

<br>







<!--==============================object===================================================-->

<h1>Listing websites</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Price</th>
      <th>Seller name</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.name %></td>
        <td><%= website.url %></td>
        <td><%= website.description %></td>
        <td><%= website.price %></td>
        <td><%= "Sold by #{website.user.name}" %></td>
        <td><%= link_to 'Show', website %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

