
<% provide(:background_color_blog,'background-blog-color') %>


<!--form search beginning-->
<%= form_tag search_blogs_path, method: :get do %>
    <p>
      <%= text_field_tag :search, params[:search],class: "form-control" %>
      <%= submit_tag "Search", name: nil,class: "btn btn-default" %>
    </p>
<% end %>

<!--form search-->

<!--=====================Blog S===========================================-->


<% @blogs.each do |blog| %>

<div class="container">
  <div class="row">

    <div class="col-md-12">

      <div>
        <div class="panel-body blog-background-panel">



          <!--/stories-->
          <div class="row">
            <br>
            <div class="col-md-2 col-sm-3 text-center">
              <%= image_tag blog.user.profileimg.url(:medium), class: "img-circle border-profile profile-blog-color",style: "width:100px;height:100px" %>

            </div>
            <div class="col-md-10 col-sm-9">
              <h3 class="light color-title-growth margin-title-blog"><%= blog.title %></h3>
              <div class="row">
                <div class="col-xs-9">
                  <h4><span class="label label-default"><%= blog.user.name %></span></h4><h4>
                  <small style="font-family:courier,'new courier';" class="text-muted"><%= time_ago_in_words(blog.created_at) %> ago  â€¢ <%= link_to "Read More",blog_path(blog) %></small>
                </h4></div>
                <div class="col-xs-3"></div>
              </div>
              <br><br>
            </div>
          </div>
          <hr>


          <!--/stories-->





        </div>
      </div>



    </div><!--/col-12-->
  </div>
</div>

<% end %>




<!--====================Blog end==========================================-->




<%= will_paginate @blogs, renderer: BootstrapPagination::Rails,class:"margin-page-navi" %>






<% if user_signed_in? && current_user.manager? %>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Title</th>
        <th>Sub title</th>
        <th>Content</th>
        <th>image</th>
        <th>user name</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @blogs.each do |blog| %>
          <tr>
            <td><%= blog.title %></td>
            <td><%= blog.sub_title %></td>
            <td><%= truncate(blog.content, lenght: 6) %></td>
            <td><%= image_tag blog.image.url(:thumb) %> </td>
            <td><%= blog.user.name if blog.user %></td>
            <td><%= link_to 'Show', blog %></td>
            <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
            <td><%= link_to 'Destroy', blog, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <!--if user_signed_in? -->
    <%= link_to 'New Blog', new_blog_path %>

<% end %>
