
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <% @blogs.each do |blog| %>
        <%= image_tag blog.image.url(:medium), class: "img-padding img-responsive"%>

    <h1 class="font-size-title thin center color-title-growth"><%= blog.title %></h1>

    <h2 class="font-size-subtitle thin lato center color-title-growth"><%= blog.sub_title %></h2>

    <h3 class="font-size-date center growth-p light">date by(<%= blog.user.name if blog.user %>) and number of comment</h3>

    <p class="font-size-p growth-p light"><%= blog.content %></p>
        <h1>hello</h1>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>

<br/>

<%= will_paginate @listings, renderer: BootstrapPagination::Rails %>








<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Sub title</th>
      <th>Content</th>
      <th>image</th>
      <th>user name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.sub_title %></td>
        <td><%=truncate(blog.content, lenght: 6) %></td>
        <td><%= image_tag blog.image.url(:thumb)%> </td>
        <td><%= blog.user.name if blog.user %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

