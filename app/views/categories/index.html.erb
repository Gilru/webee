<% provide(:visibility_search_blog,'hidden') %>
<% provide(:visibility_search_website,'hidden') %>

<h1 class="thin">Listing categories</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-primary">Action</button>
            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to 'Show', category %></li>
              <li><%= link_to 'Edit', edit_category_path(category) %></li>
              <li><%= link_to 'Destroy', category, method: :delete, data: {confirm: 'Are you sure?'} %></li>
            </ul>
          </div>
        </td>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>
