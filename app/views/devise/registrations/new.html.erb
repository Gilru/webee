<h2>Sign up</h2>
<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  <%= f.email_field :email, autofocus: true,class: "field__input",placeholder:"enter email" %></div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off",class: "field__input",placeholder:"enter password" %></div>

  <div class="field">
    <%= f.password_field :password_confirmation,class: "field__input", autocomplete: "off",placeholder:"confirm password" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
