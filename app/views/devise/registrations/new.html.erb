<% provide(:visibility_search_blog,'hidden') %>
<% provide(:visibility_search_website,'hidden') %>
<div class="row">
  <div class="background-signin">
    <div class="col-md-4"></div>
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-body margin-title-panel">

          <h2 class="margin-title-signing light color-text">Sign up</h2>


          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="red"><%= devise_error_messages! %></div>
              <div class="field">
                <%= f.text_field :name, autofocus: true, class: "field__input", placeholder: "enter name" %></div>

              <div class="field">
                <%= f.email_field :email, class: "field__input", placeholder: "enter email" %></div>

              <div class="field">
                <%= f.text_field :company, class: "field__input", placeholder: "enter your company name(optional)" %></div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "off", class: "field__input", placeholder: "enter password" %></div>

              <div class="field">
                <%= f.password_field :password_confirmation, class: "field__input", autocomplete: "off", placeholder: "confirm password" %></div></br>

              <div><%= f.submit "Sign up for an Account", class: "btn btn-primary btn-fill new-color light" %></div>
          <% end %>



        </div>

      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>

