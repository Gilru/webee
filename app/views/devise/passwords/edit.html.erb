<div class="row">
  <div class="background-signin">
    <div class="col-md-4"></div>
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-body margin-title-panel">

          <h2 class="margin-title-signing light color-text">Change your password</h2>


          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
              <div class="red"> <%= devise_error_messages! %></div>
              <%= f.hidden_field :reset_password_token %>

              <div class="field">
                <%= f.password_field :password, autofocus: true, autocomplete: "off",class: "field__input", placeholder: "enter new password" %></div>

              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off",class: "field__input", placeholder: "confirm new password" %></div> </br>

              <div><%= f.submit "Change my password", class: "btn btn-primary btn-fill new-color light sign-font-size" %></div> </br>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>

      </div>

    </div>
    <div class="col-md-3"></div>
  </div>
</div>

