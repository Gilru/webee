<div class="row">
  <div class="background-signin">
    <div class="col-md-4"></div>
    <div class="col-md-5">
      <div class="panel panel-default">
        <div class="panel-body margin-title-signin">

          <h2>Sign in</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email, autofocus: true, class: "field__input", placeholder: "enter email" %></div>

              <div class="field">
                <%= f.password_field :password, autocomplete: "off", class: "field__input", placeholder: "enter password" %></div>

              <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
              <% end -%>

              <div><%= f.submit "Sign in", class: "btn btn-primary btn-fill" %></div>
          <% end %>


      <%= render "devise/shared/links" %>
        </div>
      </div>

    </div>
    <div class="col-md-3"></div>
  </div>
</div>

